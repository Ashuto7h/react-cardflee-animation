{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "strictFunctionTypes": true,
    "sourceMap": true,
    "outDir": "lib",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "lib": [
      "dom",
      "ES6",
      "ES2020"
    ],
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ],
    "declaration": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "rollup.config.js",
    "**/node_modules/*",
    "./src/example.tsx"
  ],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "index.js"
  ]
}